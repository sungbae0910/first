<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">

	<!-- select -->
	<select id="listBrd" resultType="com.first.service.FirstVO">
		select * from board;	
	</select>
	
	<!-- insert -->
	<insert id="insertBrd" parameterType="com.first.service.FirstVO">
		insert into board values(seq_board_bno.nextval, #{bSubject}, #{bContent}, #{bWriter}, sysdate, 0)
	</insert>
	
	<!-- update -->
	<update id="updateBrd" parameterType="com.first.service.FirstVO">
		update board set bSubject=#{bSubject}, bContent=#{bContent}, bWriter=#{bWriter}	
	</update>
	
	<update id="updateCnt" parameterType="int">
		update board set bCnt=bCnt+1 where bNo=#{bNo}
	</update>
	
	<!-- delete -->
	<delete id="deleteBrd" parameterType="int">
		delete from board where bNo = #{bNo}
	</delete>



</mapper>